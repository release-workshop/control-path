{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@controlpath/compiler": "../compiler/src/index.ts",
    "ajv": "npm:ajv@^8.12.0",
    "js-yaml": "npm:js-yaml@^4.1.0",
    "msgpackr": "npm:msgpackr@^1.9.0"
  },
  "tasks": {
    "build": "deno compile --no-check --unstable-sloppy-imports --allow-read --allow-write --allow-env --allow-net --output dist/controlpath src/index.ts",
    "test": "deno test --no-check --unstable-sloppy-imports --allow-read --allow-write --allow-env src || (echo 'No test files found' && exit 0)",
    "lint": "deno lint src",
    "format:check": "deno fmt --check src"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "allowScripts": ["npm:msgpackr-extract@3.0.3"]
}
