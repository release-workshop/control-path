{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  },
  "imports": {
    "@controlpath/compiler": "../compiler/src/index.ts"
  },
  "tasks": {
    "build": "deno compile --no-check --sloppy-imports --allow-read --allow-write --allow-env --allow-net --output dist/controlpath src/index.ts",
    "test": "deno test --no-check --sloppy-imports --allow-read --allow-write --allow-env src || (echo 'No test files found' && exit 0)",
    "lint": "deno lint src",
    "format:check": "deno fmt --check src"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
