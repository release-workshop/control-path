{
  "name": "control-path",
  "version": "0.1.0",
  "description": "Control Path - Git-native feature flags",
  "private": true,
  "scripts": {
    "preinstall": "node scripts/ensure-pnpm.js",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:check": "turbo run format:check",
    "changelog:latest": "conventional-changelog -p conventionalcommits -r 1",
    "prepare": "husky install",
    "_": "echo 'ğŸ’¡ Tip: Use turbo commands directly for better performance: turbo run build, turbo run test, etc.'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=8.0.0"
  },
