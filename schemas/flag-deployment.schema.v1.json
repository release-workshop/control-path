{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://controlpath.dev/schemas/flag-deployment.schema.v1.json",
  "title": "Control Path Flag Deployment Schema",
  "description": "Schema for deployment YAML files",
  "type": "object",
  "required": ["environment", "rules"],
  "properties": {
    "environment": {
      "type": "string",
      "description": "Environment name (e.g., 'production', 'staging', 'development')"
    },
    "rules": {
      "type": "object",
      "description": "Flag rules keyed by flag name",
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "type": "object",
          "properties": {
            "rules": {
              "type": "array",
              "description": "Array of targeting rules evaluated in order",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Optional rule name for debugging"
                  },
                  "when": {
                    "type": "string",
                    "description": "Expression to evaluate. If true, this rule applies."
                  },
                  "serve": {
                    "description": "Value to serve when rule matches. For boolean: true/false or 'ON'/'OFF'. For multivariate: variation name.",
                    "oneOf": [
                      { "type": "string" },
                      { "type": "boolean" },
                      { "type": "number" }
                    ]
                  },
                  "variations": {
                    "type": "array",
                    "description": "For multivariate flags: distribution of variations",
                    "items": {
                      "type": "object",
                      "required": ["variation"],
                      "properties": {
                        "variation": {
                          "type": "string",
                          "description": "Variation name"
                        },
                        "weight": {
                          "type": "number",
                          "description": "Weight percentage (0-100). Weights are normalized if they don't sum to 100.",
                          "minimum": 0,
                          "maximum": 100
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "rollout": {
                    "type": "object",
                    "description": "Percentage-based rollout configuration",
                    "required": ["variation", "percentage"],
                    "properties": {
                      "variation": {
                        "type": "string",
                        "description": "Variation name to roll out"
                      },
                      "percentage": {
                        "type": "number",
                        "description": "Percentage of users (0-100) to serve this variation",
                        "minimum": 0,
                        "maximum": 100
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false,
                "anyOf": [
                  { "required": ["serve"] },
                  { "required": ["variations"] },
                  { "required": ["rollout"] }
                ]
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "segments": {
      "type": "object",
      "description": "Optional segment definitions for user targeting",
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "type": "object",
          "required": ["when"],
          "properties": {
            "when": {
              "type": "string",
              "description": "Expression that defines this segment. Users matching this expression are in the segment."
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

